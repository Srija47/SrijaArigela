<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style type="text/css">
        .navigation {
            margin: 20px;
        }

        body {
            padding-top: 70px;
        }
    </style>

</head>
<body>
    <header>
        <div class="navigation">
            <nav class="navbar navbar-expand-xl navbar-dark bg-dark fixed-top">
                <a href="~/Images/emart.jpg" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >
                    <img src="~/Images/emart.jpg" alt="emartlogo" style="width:50px;height:36px;">
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link text-white" asp-area="" asp-controller="Home" asp-action="carousel">Home</a>
                        <a class="nav-item nav-link text-white">Fashion</a>
                        <a class="nav-item nav-link text-white">Electronics</a>
                        <a class="nav-item nav-link text-white">Grocery</a>
                        <a class="nav-item nav-link text-white disabled" tabindex="-1">Reports</a>
                        <a class="nav-item nav-link">
                            <form class="form-inline" asp-controller="Item" asp-action="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </a>
                    </div>
                    <div class="navbar-nav ml-auto">
                        <ul class="nav navbar-nav navbar-right">
                            @*<li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Buyer" asp-action="SignUp">BuyerSignUp</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Seller" asp-action="SignUp">SellerSignUp</a>
                                </div>
                            </li>*@
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link text-white dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> SignIn</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Buyer" asp-action="SignIn">BuyerSignIn</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Seller" asp-action="SignIn">SellerSignIn</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-heart" aria-hidden="true"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-cart" aria-hidden="true"></i></a>
                            </li>

                        </ul>

                    </div>
                </div>
            </nav>
            </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CASESTUDY - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
