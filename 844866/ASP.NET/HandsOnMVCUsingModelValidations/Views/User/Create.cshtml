@model HandsOnMVCUsingModelValidations.Models.User
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
@using (Html.BeginForm())
{
    <table class="table table-bordered">
        <tr>
            @*<td>NAME</td>*@
            <td>@Html.DisplayNameFor(m => m.Name)</td>
            <td>@Html.TextBoxFor(m => m.Name)</td>
            <td>@Html.ValidationMessageFor(m => m.Name)</td>
        </tr>
        <tr>
            @*<td>DOB</td>*@
            <td>@Html.DisplayNameFor(m => m.DOB)</td>
            <td>@Html.TextBoxFor(m => m.DOB, null, new { @type = "Date" })</td>  @*attribute in third property so 2nd is null*@
            <td>@Html.ValidationMessageFor(m => m.DOB)</td>
        </tr>
        <tr>
            @*<td>EMAIL</td>*@
            <td>@Html.DisplayNameFor(m => m.Email)</td>
            <td>@Html.TextBoxFor(m => m.Email)</td>
            <td>@Html.ValidationMessageFor(m => m.Email)</td>
        </tr>
        <tr>
            @*<td>MOBILE NO</td>*@
            <td>@Html.DisplayNameFor(m => m.Mobileno)</td>
            <td>@Html.TextBoxFor(m => m.Mobileno)</td>
            <td>@Html.ValidationMessageFor(m => m.Mobileno)</td>
        </tr>
        <tr>
            @*<td>COUNTRY</td>*@
            <td>@Html.DisplayNameFor(m => m.Country)</td>
            @*<td>@Html.DropDownListFor(m => m.Country, new SelectList(new string[] { "INDIA", "CANADA", "USA" }))</td>*@
            <td>@Html.DropDownListFor(m => m.Country, ViewBag.Country as SelectList)</td>
            @*<td>@Html.ValidationMessageFor(m => m.Country)</td>*@
        </tr>
        <tr>
            @*<td>USERNAME</td>*@
            <td>@Html.DisplayNameFor(m => m.Uname)</td>
            <td>@Html.TextBoxFor(m => m.Uname)</td>
            <td>@Html.ValidationMessageFor(m => m.Pwd)</td>
        </tr>
        <tr>
            @*<td>PASSWORD</td>*@
            <td>@Html.DisplayNameFor(m => m.Pwd)</td>
            <td>@Html.TextBoxFor(m => m.Pwd)</td>
            <td>@Html.ValidationMessageFor(m => m.Pwd)</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Register" />
            </td>
        </tr>

    </table>
}