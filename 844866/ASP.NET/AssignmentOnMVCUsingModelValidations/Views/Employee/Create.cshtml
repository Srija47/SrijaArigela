@model AssignmentOnMVCUsingModelValidations.Models.Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
@using (Html.BeginForm())
{
    <table class="table table-bordered">
        <tr>
            <td>EID</td>
            <td>@Html.TextBoxFor(m => m.EmpId)</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(m => m.Name)</td>
        </tr>
        <tr>
            <td>Designation</td>
            <td>@Html.DropDownListFor(m => m.Designation,ViewBag.Designation as SelectList)</td>
        </tr>
        <tr>
            <td>ProjectName</td>
            <td>@Html.DropDownListFor(m => m.ProjectName, ViewBag.ProjectName as SelectList)</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.TextBox("Password ")</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Register" />
            </td>

        </tr>
    </table>
}
