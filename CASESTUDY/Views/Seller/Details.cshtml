@model CASESTUDY.Models.Seller
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.Photopath ?? "2.jpg");
}
<h1>Details</h1>

<div>
    <h4>Seller</h4>
    <hr />
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.SName</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />


                    <h4>Email : @Model.Email</h4>
                    <h4>CompanyName  : @Model.CompanyName </h4>
                    <h4>ContactNumber   : @Model.ContactNumber  </h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Seller" asp-action="DisplayItem" class="btn btn-primary">DisplayItem</a>
                    <a asp-controller="Seller" asp-action="AddItem" class="btn btn-primary">Edit</a>
                    <a asp-controller="Seller" asp-action="ViewItem" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
